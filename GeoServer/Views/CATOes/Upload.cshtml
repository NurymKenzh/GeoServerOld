
@{
    ViewBag.Title = GeoServer.Resources.Interface.Upload;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@GeoServer.Resources.Interface.Upload</h2>

@using (Html.BeginForm("Upload", "CATOes", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <h4>@GeoServer.Resources.CATOTexts.CATO</h4>
        <hr />

        <div class="form-group">
            @Html.Label(GeoServer.Resources.Interface.Files, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" class="multiple" name="Files" multiple />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value=@GeoServer.Resources.Interface.Upload class="btn btn-default" />
            </div>
        </div>
    </div>
}

@if (ViewBag.Report != null)
{
    if (ViewBag.Report != "")
    {
        @Html.Raw(ViewBag.Report)
    }
}

<div>
    @Html.ActionLink(GeoServer.Resources.Interface.BackToList, "Index")
</div>