@model IEnumerable<GeoServer.Models.CropRotationType>

@{
    ViewBag.Title = GeoServer.Resources.CropRotationTexts.CropRotationTypes;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@GeoServer.Resources.CropRotationTexts.CropRotationTypes</h2>

<p>
    @Html.ActionLink(GeoServer.Resources.Interface.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NameRU)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameKK)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameEN)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NameRU)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NameKK)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NameEN)
        </td>
        <td>
            @Html.ActionLink(GeoServer.Resources.Interface.Edit, "Edit", new { id = item.Id }) |
            @Html.ActionLink(GeoServer.Resources.Interface.Details, "Details", new { id = item.Id }) |
