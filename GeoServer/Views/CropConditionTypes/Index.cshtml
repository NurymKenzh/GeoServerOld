@model IEnumerable<GeoServer.Models.CropConditionType>

@{
    ViewBag.Title = GeoServer.Resources.CropConditionTypeTexts.CropConditionTypes;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@GeoServer.Resources.CropConditionTypeTexts.CropConditionTypes</h2>

<p>
    @Html.ActionLink(GeoServer.Resources.Interface.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Max)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Max)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink(GeoServer.Resources.Interface.Edit, "Edit", new { id=item.Id }) |
            @Html.ActionLink(GeoServer.Resources.Interface.Details, "Details", new { id=item.Id }) |
            @Html.ActionLink(GeoServer.Resources.Interface.Delete, "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
